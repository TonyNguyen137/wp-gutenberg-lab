{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "yournamespace/slider",
	"version": "0.1.0",
	"title": "Slider",
	"category": "widgets",
	"icon": "gallery",
	"description": "Slider-Block zur Darstellung von Bildern - leichtgewichtig, performant und basierend auf Splide.js",
	"example": {},
	"supports": {
		"html": false
	},
	"variations": [
		{
			"name": "slider-reference",
			"title": "Slider - Referenzen",
			"attributes": {
				"configuration": {
					"type": "slide",
					"pagination": true,
					"perPage": 1,
					"gap": 0,
					"rewind": true,
					"arrows": false,
					"role": "group",
					"mediaQuery": "min",
					"breakpoints": {
						"375": {
							"perPage": 1,
							"gap": 0
						},
						"576": {
							"perPage": 3,
							"gap": 12
						},
						"1200": {
							"perPage": 3,
							"gap": 80
						}
					}
				}
			}
		}
	],
	"attributes": {
		"mode": {
			"type": "string",
			"enum": ["preview", "edit"],
			"default": "edit"
		},
		"length": {
			"type": "number"
		},

		"configuration": {
			"type": "object",
			"default": {
				"type": "fade",
				"autoplay": true,
				"interval": 3000,
				"pagination": true,
				"perPage": 1,
				"gap": 0,
				"rewind": true,
				"arrows": false,
				"role": "group"
			}
		},
		"breakpoints": {
			"type": "object",
			"default": {
				"has375bp": false,
				"has576bp": false,

				"configuration": {
					"375": {
						"perPage": 1,
						"gap": 0
					},
					"576": {
						"perPage": 1,
						"gap": 0
					}
				}
			}
		}
	},
	"textdomain": "yourdomain",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": ["file:./style-index.css", "file:./view.css"],
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
